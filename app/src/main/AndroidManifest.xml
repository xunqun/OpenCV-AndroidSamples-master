            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jnardari.opencv_androidsamples.activities.SamplesActivity" />
        </activity>
        <activity
            android:name=".activities.FaceDetectionActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_face_detection"
            android:parentActivityName=".activities.SamplesActivity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jnardari.opencv_androidsamples.activities.SamplesActivity" />
        </activity>
        <activity android:name=".activities.MyTestActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
    </application>

